{
  "name": "@fiap-soat7/team-75.food-api",
  "version": "0.0.1",
  "description": "API - Food 75",
  "author": "FIAP / SOAT 7 - Team 75",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git@github.com/eneilson/fiap-soat7-team75"
  },
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build api --path tsconfig.build.json",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug=0.0.0.0:9779 --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test,spec}/**/*.ts\" --fix",
    "lint:commit": "eslint \"{src,apps,libs,test}/**/*.ts\"",
    "test": "jest -i",
    "test:watch": "jest -i --watch",
    "test:cov": "jest -i --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "prepare": "husky install",
    "postinstall": "husky install"
  },
  "dependencies": {
    "@fastify/helmet": "^10.1.0",
    "@fastify/static": "^7.0.4",
    "@nestjs/axios": "^3.0.2",
    "@nestjs/common": "^10.3.8",
    "@nestjs/core": "^10.3.8",
    "@nestjs/mongoose": "^10.0.6",
    "@nestjs/platform-fastify": "^10.3.8",
    "@nestjs/swagger": "^7.3.1",
    "axios": "^1.2.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "convict": "^6.2.4",
    "cors": "2.8.5",
    "fastify": "^4.27.0",
    "mongoose": "^8.3.4",
    "reflect-metadata": "0.1.13",
    "rxjs": "7.8.0",
    "uuid": "9.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "17.3.0",
    "@commitlint/config-conventional": "17.3.0",
    "@nestjs/cli": "^9.3.0",
    "@nestjs/schematics": "^10.1.1",
    "@nestjs/testing": "^10.3.8",
    "@types/compression": "^1.7.2",
    "@types/convict": "6.1.1",
    "@types/cors": "2.8.13",
    "@types/jest": "29.2.4",
    "@types/node": "18.11.17",
    "@types/uuid": "9.0.0",
    "@typescript-eslint/eslint-plugin": "7.8.0",
    "@typescript-eslint/parser": "7.8.0",
    "eslint": "^8.56.0",
    "eslint-config-airbnb-base": "15.0.0",
    "eslint-config-airbnb-typescript": "^18.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "3.5.2",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-tsdoc": "0.2.17",
    "husky": "8.0.2",
    "jest": "29.3.1",
    "prettier": "3.2.5",
    "rimraf": "^3.0.2",
    "ts-loader": "9.4.2",
    "typescript": "^5.4.5"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "coveragePathIgnorePatterns": [
      "node_modules",
      "test-config",
      "test-utils",
      "interfaces",
      "decorators",
      "models",
      "dtos",
      "schemas",
      "enums",
      "jestGlobalMocks.ts",
      ".module.ts",
      "<rootDir>/app/main.ts",
      ".mock.ts",
      "src/commons",
      "src/main.ts",
      "src/app.module.ts"
    ],
    "testTimeout": 60000,
    "rootDir": "src",
    "moduleNameMapper": {
      "^src/(.*)$": "<rootDir>/$1"
    },
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "globalSetup": "<rootDir>/test-utils/globalSetup.ts",
    "globalTeardown": "<rootDir>/test-utils/globalTeardown.ts",
    "setupFilesAfterEnv": [
      "<rootDir>/test-utils/clearDatabase.ts"
    ]
  }
}
